{
  "kind": "collectionType",
  "collectionName": "colores",
  "info": {
    "singularName": "color",
    "pluralName": "colores",
    "displayName": "Colores",
    "description": "Colores disponibles para los productos"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "color_rgb": {
      "type": "string",
      "required": true,
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "imagen": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "productos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::producto.producto"
    }
  }
}