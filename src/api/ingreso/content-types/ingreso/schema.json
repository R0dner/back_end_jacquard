{
  "kind": "collectionType",
  "collectionName": "ingresos",
  "info": {
    "singularName": "ingreso",
    "pluralName": "ingresos",
    "displayName": "Ingresos",
    "description": "Control de ingresos de productos con configuraciones de precios"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "tipo_ingreso": {
      "type": "enumeration",
      "enum": [
        "Producción",
        "Compra", 
        "Donación",
        "Transferencia",
        "Otros"
      ],
      "default": "Producción"
    },
    "fecha_ingreso": {
      "type": "date",
      "required": true
    },
    "motivo_ingreso": {
      "type": "string"
    },
    "numero_factura": {
      "type": "string"
    },
    "Productos": {
      "type": "component",
      "repeatable": true,
      "component": "productos.items",
      "required": true
    },
    "estado": {
      "type": "enumeration",
      "enum": [
        "Borrador",
        "Creado",
        "Aprobado",
        "Rechazado"
      ],
      "default": "Borrador"
    },
    "ingresado_por": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "aprobado_por": {
      "type": "relation",
      "relation": "oneToOne", 
      "target": "admin::user"
    },
    "aprobado": {
      "type": "boolean",
      "default": false
    },
    "observaciones_generales": {
      "type": "text",
      "description": "Observaciones generales del ingreso"
    },
    "total_costo": {
      "type": "decimal",
      "description": "Total del costo del ingreso"
    },
    "total_items": {
      "type": "integer",
      "description": "Total de items en el ingreso"
    }
  }
}