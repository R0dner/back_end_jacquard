{
  "kind": "collectionType",
  "collectionName": "inventario_colores",
  "info": {
    "singularName": "inventario-color",
    "pluralName": "inventario-colores",
    "displayName": "Inventario por Color",
    "description": "Control de stock por producto, color y opcionalmente talla"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "producto": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::producto.producto",
      "required": true
    },
    "color": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::color.color",
      "required": true
    },
    "talla": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::talla.talla",
      "required": false
    },
    "stock_actual": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "stock_minimo": {
      "type": "integer",
      "default": 0
    },
    "ultimo_ingreso": {
      "type": "datetime"
    },
    "ultima_salida": {
      "type": "datetime"
    },
    "codigo": {
      "type": "uid"
    },
    "unidad_de_medida": {
      "type": "enumeration",
      "enum": ["docena", "paquete", "unidad"],
      "default": "unidad"
    }
  }
}