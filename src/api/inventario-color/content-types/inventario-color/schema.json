{
  "kind": "collectionType",
  "collectionName": "inventario_colores", 
  "info": {
    "singularName": "inventario-color",
    "pluralName": "inventario-colores",
    "displayName": "Inventario por Color y Talla",
    "description": "Control de stock por producto, color y opcionalmente talla con precios"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "producto": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::producto.producto",
      "required": true
    },
    "color": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::color.color",
      "required": true
    },
    "talla": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::talla.talla",
      "required": false
    },
    "stock_actual": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "stock_minimo": {
      "type": "integer",
      "default": 0
    },
    "ultimo_ingreso": {
      "type": "datetime"
    },
    "ultima_salida": {
      "type": "datetime"
    },
    "codigo": {
      "type": "uid"
    },
    "unidad_de_medida": {
      "type": "enumeration",
      "enum": ["docena", "paquete", "unidad"],
      "default": "unidad"
    },
    "precio_unitario": {
      "type": "decimal",
      "default": 0,
      "description": "Precio unitario de compra"
    },
    "precio_venta_sugerido": {
      "type": "decimal",
      "default": 0,
      "description": "Precio de venta sugerido basado en margen"
    },
    "precio_oferta": {
      "type": "decimal",
      "description": "Precio de oferta (opcional)"
    },
    "en_oferta": {
      "type": "boolean",
      "default": false
    },
    "fecha_inicio_oferta": {
      "type": "date",
      "description": "Fecha de inicio de oferta"
    },
    "fecha_fin_oferta": {
      "type": "date", 
      "description": "Fecha de fin de oferta"
    },
    "margen_ganancia": {
      "type": "decimal",
      "default": 0,
      "description": "Margen de ganancia en porcentaje"
    },
    "fecha_ultimo_cambio_precio": {
      "type": "datetime"
    },
    "estado_producto": {
      "type": "enumeration",
      "enum": ["Activo", "Inactivo", "Descontinuado", "Agotado"],
      "default": "Activo"
    },
    "observaciones": {
      "type": "text",
      "description": "Observaciones espec√≠ficas para este item de inventario"
    }
  }
}