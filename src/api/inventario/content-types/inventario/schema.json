{
  "kind": "collectionType",
  "collectionName": "inventarios",
  "info": {
    "singularName": "inventario",
    "pluralName": "inventarios",
    "displayName": "Inventario",
    "description": "Control de inventario por producto y color"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "stock_actual": {
      "type": "biginteger"
    },
    "producto_color": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::producto-color.producto-color"
    },
    "ultimo_ingreso": {
      "type": "datetime"
    },
    "codigo": {
      "type": "uid"
    },
    "ultima_salida": {
      "type": "datetime"
    },
    "stock_minimo": {
      "type": "integer",
      "default": 0
    },
    "unidad_de_medida": {
      "type": "enumeration",
      "enum": [
        "docena",
        "paquete"
      ],
      "default": "docena"
    },
    "reservado": {
      "type": "integer",
      "default": 0,
      "description": "Cantidad reservada para pedidos"
    },
    "disponible": {
      "type": "integer",
      "default": 0,
      "description": "Stock actual menos reservado"
    }
  }
}