{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "singularName": "producto",
    "pluralName": "productos",
    "displayName": "Productos",
    "description": "Catálogo de productos"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "codigo": {
      "type": "uid",
      "required": true
    },
    "nombre": {
      "type": "string",
      "required": true,
      "minLength": 3
    },
    "descripcion": {
      "type": "text",
      "required": true
    },
    "observaciones": {
      "type": "text"
    },
    "activo": {
      "type": "boolean",
      "default": true
    },
    "imagen_principal": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "multimedia": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "valoracion": {
      "type": "decimal",
      "default": 1,
      "min": 0,
      "max": 5
    },
    "precio_venta": {
      "type": "decimal",
      "default": 0,
      "required": true
    },
    "precio_oferta": {
      "type": "decimal"
    },
    "en_oferta": {
      "type": "boolean",
      "default": false
    },
    "stock_disponible": {
      "type": "integer",
      "default": 0,
      "description": "Stock total calculado automáticamente desde producto_colores"
    },
    "talla": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::talla.talla"
    },
    "fecha_disponible": {
      "type": "date"
    },
    "grupos_de_productos": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::grupo-producto.grupo-producto",
      "inversedBy": "productos"
    },
    "producto_colores": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::producto-color.producto-color",
      "mappedBy": "producto"
    }
  }
}