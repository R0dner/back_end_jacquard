{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "singularName": "producto",
    "pluralName": "productos",
    "displayName": "Productos",
    "description": "Cat√°logo de productos"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "codigo": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3,
      "maxLength": 20,
      "regex": "^[A-Z0-9-]+$"
    },
    "nombre": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 100
    },
    "descripcion": {
      "type": "text",
      "required": true,
      "minLength": 10,
      "maxLength": 500
    },
    "observaciones": {
      "type": "text",
      "maxLength": 300
    },
    "activo": {
      "type": "boolean",
      "default": true
    },
    "imagen_principal": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "multimedia": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "videos"]
    },
    "valoracion": {
      "type": "decimal",
      "default": 1,
      "min": 0,
      "max": 5
    },
    "fecha_disponible": {
      "type": "date"
    },
    "grupos_de_productos": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::grupo-producto.grupo-producto",
      "inversedBy": "productos"
    },
    "colores": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::color.color"
    },
    "tallas": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::talla.talla"
    }
  }
}