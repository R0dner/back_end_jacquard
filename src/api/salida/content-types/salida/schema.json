{
  "kind": "collectionType",
  "collectionName": "salidas",
  "info": {
    "singularName": "salida",
    "pluralName": "salidas",
    "displayName": "Salidas",
    "description": "Control de salidas de inventario"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "tipo_solicitud": {
      "type": "enumeration",
      "enum": [
        "Entrega",
        "Venta directa",
        "Preventa",
        "Devolución",
        "Transferencia",
        "Otros"
      ],
      "default": "Entrega"
    },
    "fecha_salida": {
      "type": "date",
      "required": true
    },
    "numero_documento": {
      "type": "string",
      "description": "Número de factura, guía o documento de salida"
    },
    "Aclaracion": {
      "type": "text"
    },
    "Productos": {
      "type": "component",
      "repeatable": true,
      "component": "productos.items-salida",
      "required": true
    },
    "estado": {
      "type": "enumeration",
      "enum": [
        "Borrador",
        "Pendiente",
        "Aprobada",
        "Rechazada",
        "Completada"
      ],
      "default": "Borrador"
    },
    "solicitado_por": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "aprobado_por": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "total_items": {
      "type": "integer",
      "description": "Total de items en la salida"
    }
  }
}