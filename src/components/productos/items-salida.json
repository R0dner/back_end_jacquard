{
  "collectionName": "components_productos_items_salidas",
  "info": {
    "displayName": "Items_salida",
    "icon": "ambulance",
    "description": "Items de productos con colores y tallas para salidas"
  },
  "options": {},
  "attributes": {
    "producto": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::producto.producto",
      "required": true
    },
    "color": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::color.color",
      "required": true
    },
    "talla": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::talla.talla",
      "required": false
    },
    "cantidad": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "precio_unitario": {
      "type": "decimal",
      "description": "Precio unitario aplicado en esta salida"
    },
    "precio_venta": {
      "type": "decimal",
      "description": "Precio de venta final (puede ser precio normal o de oferta)"
    },
    "subtotal": {
      "type": "decimal",
      "description": "cantidad * precio_venta"
    },
    "observaciones": {
      "type": "text"
    }
  }
}